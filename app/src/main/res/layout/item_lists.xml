<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/white_backgroud"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:orientation="vertical"
    android:elevation="6dp"
    android:padding="16dp">

    <View
        android:id="@+id/viewItemList"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/grey_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:contentDescription="Men's Clothing Item"
        android:src="@drawable/tshirt"
        app:layout_constraintBottom_toBottomOf="@+id/viewItemList"
        app:layout_constraintEnd_toEndOf="@+id/viewItemList"
        app:layout_constraintStart_toStartOf="@+id/viewItemList"
        app:layout_constraintTop_toTopOf="@+id/viewItemList" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:fontFamily="sans-serif-black"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/viewItemList"
        app:layout_constraintTop_toTopOf="@+id/viewItemList" />

    <View
        android:id="@+id/viewItemList2"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/black_background"
        app:layout_constraintBottom_toBottomOf="@+id/itemPrice"
        app:layout_constraintEnd_toEndOf="@+id/itemPrice"
        app:layout_constraintStart_toStartOf="@+id/itemPrice"
        app:layout_constraintTop_toTopOf="@+id/itemPrice" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00$"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewItemList"
        app:layout_constraintStart_toStartOf="@+id/itemName" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Description"
        android:textColor="@color/black"
        android:paddingRight="20dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintStart_toStartOf="@+id/itemName"
        app:layout_constraintTop_toBottomOf="@+id/itemName" />


</androidx.constraintlayout.widget.ConstraintLayout>

