<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragments_bg"
    android:layout_gravity="center_horizontal"
    tools:context=".AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/accBackButton"
            android:drawableStart="@drawable/arrow_back"
            android:padding="2dp">
        </TextView>

        <TextView
            android:id="@+id/accountHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Account Details"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="25sp"/>

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/accProfilePic"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@drawable/button_shape"/>

    <ImageView
        android:id="@+id/accEditProfilePic"
        android:layout_width="40dp"
        android:src="@drawable/edit_dark"
        android:layout_height="40dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="240dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp"
        android:text="Full Name"
        android:drawableStart="@drawable/account"
        android:drawablePadding="20dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="84dp"
        android:text=""
        android:id="@+id/accFullName"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="40dp"
        android:text="Email"
        android:drawableStart="@drawable/username"
        android:drawablePadding="20dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="84dp"
        android:text=""
        android:id="@+id/accEmail"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="40dp"
        android:text="Phone Number"
        android:drawableStart="@drawable/local_phone"
        android:drawablePadding="20dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="84dp"
        android:text=""
        android:id="@+id/accPhoneNo"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="40dp"
        android:text="Address"
        android:drawableStart="@drawable/location_on"
        android:drawablePadding="20dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="84dp"
        android:text=""
        android:id="@+id/accAddress"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:id="@+id/logoutButton"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="600dp"
        android:text="Log Out"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black">
    </Button>

</FrameLayout>